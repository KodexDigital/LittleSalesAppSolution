@model SystemApp.Models.ViewModels.LoginViewModel


@{
	ViewData["Title"] = "StoreAuth";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
	<div class="col-sm-4"></div>
	<div class="col-sm-4">
		<div class="col-md-10 offset-1">
			<div class="login-form-icon">
				<i class="fas fa-user-circle fa-9x text-secondary"></i>
			</div>
			<form method="post" asp-action="StoreAuth" asp-route-returnurl="@Model.ReturnUrl">
				<div class="text-danger" asp-validation-summary="All"></div>
				<input type="hidden" asp-for="ReturnUrl" />
				<div class="form-group">
					<div class="input-group">
						<div class="input-group-prepend">
							<div class="input-group-text">
								<i class="fas fa-envelope"></i>
							</div>
						</div>
						<input asp-for="Email" class="form-control" placeholder="Email Address" />
					</div>
				</div>
				<div class="form-group">
					<div class="input-group">
						<div class="input-group-prepend">
							<div class="input-group-text">
								<i class="fas fa-lock"></i>
							</div>
						</div>
						<input asp-for="Password" class="form-control" placeholder="Password" />
					</div>
				</div>
				<div class="form-group">
					<button type="submit" class="btn btn-primary btn-block">Log in</button>
				</div>
				<div class="form-group">
					<h5 class="text-success text-center">
						Authourize to gain access to the store server.
					</h5>
				</div>
			</form>
		</div>
	</div>
	<div class="col-sm-4"></div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
