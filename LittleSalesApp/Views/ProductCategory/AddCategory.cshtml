@model SystemApp.Models.ViewModels.ProductCategoryViewModel


@{
	ViewData["Title"] = "AddCategory";
	Layout = "~/Views/Shared/_SalesLayout.cshtml";
}
<nav aria-label="breadcrumb">
	<ol class="breadcrumb">
		<li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index"><i class="fa fa-home"></i> Home</a></li>
		<li class="breadcrumb-item"><a asp-controller="ProductCategory" asp-action="Index">Product Category</a></li>
		<li class="breadcrumb-item active" aria-current="page">New</li>
	</ol>
</nav>
<div>
	<div class="">

	</div>
	<div class="card">
		<div class="card-body">
			<div class="row">
				<div class="col-md-8">
					<form method="post" asp-action="AddCategory">
						<div class="form-group">
							<label asp-for="CategoryName" class="control-label"></label>
							<input asp-for="CategoryName" class="form-control" placeholder="name" />
							<span asp-validation-for="CategoryName" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label asp-for="ShortNote" class="control-label"></label>
							<textarea asp-for="ShortNote" class="form-control" placeholder="description" rows="5"></textarea>
						</div>
						<div class="form-group">
							<label asp-for="OderPosition" class="control-label"></label>
							<input asp-for="OderPosition" class="form-control" value="0" />
						</div>
						<div class="form-group">
							<div class="input-group-append">
								<button class="btn text-black-50 btn-outline-primary" type="submit">
									<i class="fas fa-plus"></i> Add Category
								</button>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>