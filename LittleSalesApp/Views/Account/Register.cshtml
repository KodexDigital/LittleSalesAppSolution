@model SystemApp.Models.ViewModels.RegisterViewModel


@{
	ViewData["Title"] = "Create account";
	Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

@{
	var customFile = "~/images/system/avatar.png";
}

	<div class="my-4">
		<div class="breadcrumb ">
			<h4>Create Account</h4>
		</div>
		@if (ViewBag.SuccessMessage != null)
		{
			<div class="text-success">
				<div class="alert alert-success alert-dismissible">
					<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
					<h5><strong>Success! <i class="fa fa-check-circle"></i> </strong> </h5>
					@ViewBag.SuccessMessage
				</div>
			</div>
		}
		<div class="row">
			<div class="col-md-12">
				<form asp-action="Register" method="post" enctype="multipart/form-data">
					<div class="rounded">
						<div class="row">
							<div class="col-md-10">
								<div class="form-group">
									<input asp-for="Name" class="form-control" placeholder="@Html.DisplayNameFor(n => n.Name)" />
									<span asp-validation-for="Name" class="text-danger"></span>
								</div>
								<div class="form-group">
									<input asp-for="UserName" class="form-control" placeholder="@Html.DisplayNameFor(n => n.UserName)" />
									<span asp-validation-for="UserName" class="text-danger"></span>
								</div>
								<div class="form-group">
									<input asp-for="PhoneNumber" class="form-control" placeholder="@Html.DisplayNameFor(n => n.PhoneNumber)" />
									<span asp-validation-for="PhoneNumber" class="text-danger"></span>
								</div>
								<div class="form-group">
									<input asp-for="Email" class="form-control" placeholder="@Html.DisplayNameFor(n => n.Email)" />
									<span asp-validation-for="Email" class="text-danger"></span>
								</div>
							</div>
							<div class="col-md-2">
								<img src="@customFile" id="image_upload_preview" class="thumbnail mt-1 rounded-circle" style="width:100%; height:40%" asp-append-version="true" />
							</div>
						</div>

						<div class="form-group">
							<input asp-for="PasswordHash" class="form-control" placeholder="@Html.DisplayNameFor(n => n.PasswordHash)" />
							<span asp-validation-for="PasswordHash" class="text-danger"></span>
						</div>
						<div class="form-group">
							<input asp-for="ConfirmPassword" class="form-control" placeholder="@Html.DisplayNameFor(n => n.ConfirmPassword)" />
							<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
						</div>
						<div class="form-group">
							<input asp-for="State" class="form-control" placeholder="@Html.DisplayNameFor(n => n.State)" />
							<span asp-validation-for="State" class="text-danger"></span>
						</div>
						<div class="form-group">
							<input asp-for="PostalCode" class="form-control" placeholder="@Html.DisplayNameFor(n => n.PostalCode)" />
							<span asp-validation-for="PostalCode" class="text-danger"></span>
						</div>
						<div class="form-group">
							<textarea asp-for="StreetAddress" class="form-control" rows="3" placeholder="@Html.DisplayNameFor(n => n.StreetAddress)"></textarea>
							<span asp-validation-for="StreetAddress" class="text-danger"></span>
						</div>
						<div class="form-group">
							<input asp-for="City" class="form-control" placeholder="@Html.DisplayNameFor(n => n.City)" />
							<span asp-validation-for="City" class="text-danger"></span>
						</div>
						<div class="form-group">
							<div class="custom-file">
								<input asp-for="ProfileImageFilePath" type="file" class="custom-file-input" id="@customFile" onchange="document.getElementById('image_upload_preview').src = window.URL.createObjectURL(this.files[0])">
								<label asp-for="ProfileImageFilePath" class="custom-file-label" for="customFile">Upload profile image</label>
								<span asp-validation-for="ProfileImageFilePath" class="text-danger"></span>
							</div>
						</div>
						<div class="form-group">
							<button type="submit" class="btn btn-primary"><i class="fa fa-paper-plane" aria-hidden="true"></i> Save</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>

