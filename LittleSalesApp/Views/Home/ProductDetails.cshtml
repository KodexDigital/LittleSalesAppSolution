@model SystemApp.Models.DataModels.Product
@using SystemApp.Utilities
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@using LittleSalesApp.Extensions

@{
	ViewData["Title"] = "Details";
	Layout = "~/Views/Shared/_Layout.cshtml";
	var productImagePath = "~/images/product/uploads/" + Model.ProductImagePath;
}

<div class="container">
	<div class="card">
		@*<div class="card-header bg-light text-light row">
			<div class="col-md-6">
				<h1 class="text-primary text-capitalize">@Model.ProductName</h1>
			</div>
			<div class="col-md-6 text-md-right">
				<h1 class="text-muted">Price : @((Model.Price).ToString("c"))</h1>
			</div>
		</div>*@
		<div class="card-body">
			<div class="container rounded p-2">
				<div class="row">
					<div class="col-md-8">
						<div class="row">
							<div class="col-12">
								<h3 class="text-success">Price per Service: $@Model.Price</h3>
								<h4 class="text-muted">@Model.ProductNumber</h4>
								<p class="text-secondary">@Html.Raw(Model.Description)</p>
							</div>
						</div>
					</div>
					@*<div class="col-md-4 text-center">
						<img src="@productImagePath" asp-append-version="true" class="card-img-top rounded" style="width:100%; height:auto" />
					</div>*@

				</div>

			</div>
		</div>
		<div class="card-footer">
			<div class="row">
				<div class="col-12 col-md-6 pb-1">
					<a asp-action="Index" class="btn btn-success form-control  btn-square btn-lg" style="height:50px;">Back to List</a>
				</div>
				<div class="col-12 col-md-6 pb-1">
					@{
						var AddToCartEnabled = true;

						if (HttpContextAccessor.HttpContext.Session.GetObject<List<Guid>>(StandardVariables.SessionCart) != null)
						{
							var sessionList = HttpContextAccessor.HttpContext.Session.GetObject<List<Guid>>(StandardVariables.SessionCart);
							if (sessionList.Contains(Model.Id))
							{
								AddToCartEnabled = false;
							}
						}
					}

					@if (AddToCartEnabled)
					{
						<a asp-action="AddToCart" asp-route-serviceId="@Model.Id" class="btn btn-primary btn-square form-control btn-lg" style="height:50px;">Add to Cart</a>
					}
					else
					{
						<button class="btn btn-primary btn-square form-control btn-lg" style="height:50px;" disabled>Item in Cart</button>
					}

				</div>
			</div>
		</div>
	</div>
</div>
